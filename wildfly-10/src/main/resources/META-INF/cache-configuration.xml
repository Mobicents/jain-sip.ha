<?xml version="1.0" encoding="UTF-8"?>

<infinispan
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="urn:infinispan:config:8.2 http://www.infinispan.org/schemas/infinispan-config-8.2.xsd"
		xmlns="urn:infinispan:config:8.2">

	<jgroups>
		<stack-file name="udp" path="/default-configs/default-jgroups-udp.xml"/>
	</jgroups>

	<cache-container name="JBossCache-cluster" default-cache="default" statistics="false" shutdown-hook="DEFAULT">

		<replicated-cache name="default" mode="SYNC" remote-timeout="20000">

			<locking isolation="REPEATABLE_READ" acquire-timeout="20000"
					 striping="false" write-skew="false" concurrency-level="500" />

			<transaction mode="NON_XA"/>

			<!-- serialization related configuration, used for replication and cache loading -->
			<store-as-binary keys="false" values="false" />

			<state-transfer enabled="true" timeout="20000"/>

		</replicated-cache>

	</cache-container>

</infinispan>
